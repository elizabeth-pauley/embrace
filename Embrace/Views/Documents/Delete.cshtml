@using Microsoft.AspNetCore.Identity
@model Embrace.Models.Document
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Delete";
}
<h3>Are you sure you want to delete this document?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalLanguage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OriginalLanguage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TargetLanguage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TargetLanguage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UploadedFilePath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UploadedFilePath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TranslatedFilePath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TranslatedFilePath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserId)
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Return</a>
    </form>
</div>
